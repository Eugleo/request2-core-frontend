{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Form field",
  "type": "object",
  "allOf": [
    {
      "if": {
        "not": { "required": ["include"] }
      },
      "then": {
        "required": ["type", "name"]
      }
    },
    {
      "if": {
        "required": ["type"],
        "properties": {
          "type": { "enum": ["single-choice", "multiple-choice", "text-with-hints"] }
        }
      },
      "then": {
        "required": ["choices"]
      }
    },
    {
      "if": {
        "properties": {
          "type": { "enum": ["text-short", "text-long", "text-with-hints"] }
        }
      },
      "then": {
        "properties": {
          "validation": {
            "properties": {
              "minLength": {
                "type": "number"
              },
              "maxLength": {
                "type": "number"
              },
              "matches": {
                "type": "string"
              },
              "errors": {
                "properties": {
                  "minLength": {
                    "type": "string"
                  },
                  "maxLength": {
                    "type": "string"
                  },
                  "matches": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "validation": { "isType": { "enum": ["number"] } }
        }
      },
      "then": {
        "properties": {
          "validation": {
            "properties": {
              "integer": {
                "type": "boolean"
              },
              "moreThan": {
                "type": "boolean"
              },
              "lessThan": {
                "type": "boolean"
              },
              "positive": {
                "type": "boolean"
              },
              "negative": {
                "type": "boolean"
              },
              "min": {
                "type": "boolean"
              },
              "max": {
                "type": "boolean"
              },
              "errors": {
                "properties": {
                  "integer": {
                    "type": "string"
                  },
                  "moreThan": {
                    "type": "string"
                  },
                  "lessThan": {
                    "type": "string"
                  },
                  "positive": {
                    "type": "string"
                  },
                  "negative": {
                    "type": "string"
                  },
                  "min": {
                    "type": "string"
                  },
                  "max": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  ],
  "additionalProperties": false,
  "properties": {
    "include": {
      "type": "string",
      "pattern": "^@[a-z0-9?!:/=%*^~@-]+$"
    },
    "name": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9 ()!?â€”:+@#$~^&*=]+$"
    },
    "type": {
      "type": "string",
      "enum": [
        "single-choice",
        "multiple-choice",
        "text-short",
        "text-long",
        "text-with-hints",
        "files"
      ]
    },
    "choices": {
      "type": "array",
      "minItems": 2,
      "items": {
        "type": "string"
      }
    },
    "description": {
      "type": "string"
    },
    "hint": {
      "type": "string"
    },
    "required": {
      "type": "boolean"
    }
  }
}
