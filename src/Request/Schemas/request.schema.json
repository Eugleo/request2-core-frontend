{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Request specification",
  "type": "object",
  "required": ["title", "sections", "type", "typeAbbreviation"],
  "properties": {
    "title": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "typeAbbreviation": {
      "type": "string",
      "pattern": "^[A-Z]{1,2}$"
    },
    "sections": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["title", "fields"],
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "fields": {
            "type": "array",
            "minItems": 1,
            "items": {
              "$ref": "./field.schema.json"
            }
          }
        }
      }
    }
  }
}
